{
  "name": "beatsmith",
  "version": "0.0.1",
  "description": "This is the backend part of BeatSmith. It is a web application that allows users to create and share their own beats and music.",
  "type": "module",
  "scripts": {
    "client-install": "cd client && yarn install",
    "client-build": "cd client && yarn install && yarn build",
    "start:client": "cd client && yarn start",
    "storybook": "cd client && yarn storybook --ci",
    "format": "prettier --write",
    "format-client": "cd client && yarn format",
    "lint": "cd client && yarn lint",
    "prepare": "husky",
    "start": "node server.js",
    "server": "nodemon server.js",
    "dev": "concurrently \"yarn run server\" \"yarn run start:client\"",
    "fresh": "yarn run clean && yarn run seed",
    "mocha": "nyc mocha --timeout=5000 --exit",
    "clean": "cd pre-test && node clean.js",
    "seed": "cd pre-test && node seed.js"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "async-mutex": "^0.5.0",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "debug": "^4.3.4",
    "dotenv-safe": "^9.1.0",
    "express": "^4.19.1",
    "express-actuator": "^1.8.4",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "ics": "^3.7.2",
    "is-empty": "^1.2.0",
    "is-port-reachable": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "ldapauth-fork": "^5.0.5",
    "ldapjs": "^3.0.7",
    "mailgun.js": "^10.2.1",
    "mime-types": "^2.1.35",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "mongoose": "^8.2.3",
    "mongoose-paginate-v2": "^1.8.0",
    "mongoose-sequence": "^6.0.1",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.0",
    "prometheus-api-metrics": "^3.2.2",
    "request-ip": "^3.3.0",
    "socket.io": "^4.7.5",
    "stream-buffers": "^3.0.2",
    "trim-request": "^1.0.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.6",
    "chai": "^5.1.0",
    "chai-http": "^4.4.0",
    "faker": "^6.6.6",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "mocha": "^10.3.0",
    "mongo-seeding": "^4.0.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PRJ-Beatsmith/beatsmith-app.git"
  },
  "keywords": [
    "react",
    "redux",
    "express",
    "node",
    "mongodb",
    "mongoose",
    "webpack",
    "babel",
    "sass",
    "mui"
  ],
  "author": "BeatSmith Org.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PRJ-Beatsmith/beatsmith-app/issues"
  },
  "homepage": "https://github.com/PRJ-Beatsmith/beatsmith-app#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --quiet --fix --ext .js,.vue src/",
      "git add"
    ],
    "**/*.{vue,html,js,json,scss,less,css,md}": [
      "prettier --config ./.prettierrc --ignore-path ./.eslintignore --write",
      "git add"
    ]
  }
}
